{
  "name": "node-typescript-starter",
  "version": "0.1.0",
  "scripts": {
    "check": "tsc --noEmit",
    "dev": "TZ=UTC nodemon main.js",
    "prepare": "husky install",
    "start": "TZ=UTC node main.js",
    "test": "TZ=UTC node --test"
  },
  "author": "A. Hassan (https://hassan.web.id)",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.10.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
