{
  "name": "node-typescript-starter",
  "version": "0.1.0",
  "scripts": {
    "check": "tsc --noEmit",
    "dev": "TZ=UTC nodemon main.js",
    "prepare": "husky",
    "lint": "eslint . --fix",
    "start": "TZ=UTC node main.js",
    "test": "TZ=UTC node --test"
  },
  "author": "A. Hassan (https://hassan.web.id)",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
